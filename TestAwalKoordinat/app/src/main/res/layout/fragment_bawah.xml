<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.unsyiah.elektro.mobile.tugas06_joystick.FragementBawah"
    tools:showIn="@layout/activity_main"
    android:background="#bbbaba">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y+"
        android:id="@+id/btnYatas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickButton"
        android:background="#bd6262"
        android:textStyle="bold"
        android:textColor="#03237f" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z+"
        android:id="@+id/btnZatas"
        android:onClick="onClickButton"
        android:background="#bd6262"
        android:textStyle="bold"
        android:textColor="#03237f"
        android:layout_alignTop="@+id/btnYatas"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X+"
        android:id="@+id/btnXatas"
        android:onClick="onClickButton"
        android:background="#bd6262"
        android:textStyle="bold"
        android:textColor="#03237f"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y-"
        android:id="@+id/btnYbawah"
        android:onClick="onClickButton"
        android:background="#bd6262"
        android:textStyle="bold"
        android:textColor="#03237f"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnYatas"
        android:layout_alignStart="@+id/btnYatas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X-"
        android:id="@+id/btnXbawah"
        android:onClick="onClickButton"
        android:background="#bd6262"
        android:textStyle="bold"
        android:textColor="#03237f"
        android:layout_alignTop="@+id/btnYbawah"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z-"
        android:id="@+id/btnZbawah"
        android:onClick="onClickButton"
        android:background="#bd6262"
        android:textStyle="bold"
        android:textColor="#03237f"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
