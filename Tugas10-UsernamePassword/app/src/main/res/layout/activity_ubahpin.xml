<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#c8c3c3">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/pass2"
        android:layout_alignEnd="@+id/pass2"
        android:layout_alignLeft="@+id/pass2"
        android:layout_alignStart="@+id/pass2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass2"
        android:layout_below="@+id/user2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSimpan"
        android:id="@+id/button3"
        android:onClick="onSimpan"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/pass2"
        android:layout_alignLeft="@+id/pass2"
        android:layout_alignStart="@+id/pass2"
        android:textStyle="bold" />
</RelativeLayout>