<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.unsyiah.elektro.mobile.tugas09_tebakgambar.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bckDayung"
        android:src="@drawable/becak_dayung"
        android:nestedScrollingEnabled="false"
        android:onClick="onClickGambar"
        android:layout_alignTop="@+id/bckMotor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bckMotor"
        android:src="@drawable/becak_motor"
        android:onClick="onClickGambar"
        android:layout_above="@+id/mobil"
        android:layout_alignLeft="@+id/spdMotor"
        android:layout_alignStart="@+id/spdMotor" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/sepeda"
        android:src="@drawable/sepeda"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp"
        android:onClick="onClickGambar" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/spdMotor"
        android:src="@drawable/sepeda_motor"
        android:onClick="onClickGambar"
        android:layout_below="@+id/mobil"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/mobil"
        android:src="@drawable/mobil"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickGambar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TEBAK GAMBAR"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bckDayung"
        android:layout_toEndOf="@+id/bckDayung"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
